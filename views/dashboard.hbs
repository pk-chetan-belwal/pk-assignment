<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>{{#if title}}{{title}}{{else}}Hello from Docker!{{/if}}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <style>
        body{font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Helvetica,Arial,sans-serif;
                 background:#f6f8fa;color:#222;margin:0;padding:40px}
        .card{max-width:720px;margin:24px auto;padding:28px;border-radius:8px;
                    background:#fff;box-shadow:0 6px 18px rgba(2,6,23,0.08)}
        h1{margin:0 0 8px;font-size:28px;color:#0b6b3a}
        .lead{margin:0 0 18px;color:#374151}
        .info{background:#f0fbf5;border:1px solid #dff4e6;padding:14px;border-radius:6px}
        .info ul{margin:8px 0 0;padding-left:18px}
        code{background:#eef2f7;padding:2px 6px;border-radius:4px;font-family:monospace}
        .footer{margin-top:18px;color:#6b7280;font-size:13px}
    </style>
</head>
<body>
    <div class="card">
        <div style="position:relative">
            <h1>{{#if heading}}{{heading}}{{else}}Hello Welcome Onboard!{{/if}}</h1>
            <form action="/auth/logout" method="post">
            <button type="submit" style="margin-top:20px;padding:10px 16px;border-radius:6px;border:1px solid #3b82f6;background:#3b82f6;color:#fff;cursor:pointer">
                 Logout
            </form>
        </div>
</div>
    </div>
</body>
</html></div>